
@model List<CERomerin.Models.Producto>

<h3>Su busqueda es: @ViewBag.clave</h3>

<div class="new-arrivals-w3agile">
    <div class="container">
        <h2 class="tittle">New Arrivals</h2>
        <div class="arrivals-grids">

            @{
                int i = 1;
            }


@foreach (var item in Model)
{
    var imagen = @item.ProductoImagen.FirstOrDefault();
    string img = imagen == null ? "no_disponible.jpg" : imagen.Imagen;

            <div class="col-md-3 arrival-grid simpleCart_shelfItem">
                <div class="grid-arr">
                    <div class="grid-arrival">
                        <figure>
                            <a href="#" class="new-gri" data-toggle="modal" data-target="#myModal1">
                                <div class="grid-img">
                                    <img width="150" height="150" title=" " alt=" " src="~/ImgProductos/@img" class="img-responsive" alt="">
                                </div>
                                <div class="grid-img">
                                    <img width="150" height="150" title=" " alt=" " src="~/ImgProductos/@img" class="img-responsive" alt="">
                                </div>
                            </a>
                        </figure>
                    </div>
                    <div class="ribben">
                        <p>NEW</p>
                    </div>
                    <div class="ribben1">
                        <p>SALE</p>
                    </div>
                    <div class="block">
                        <div class="starbox small ghosting"> </div>
                    </div>
                    <div class="women">
                        <h6><a href="single.html">@item.Denominacion</a></h6>
                        <span class="size">XL / XXL / S </span>
                        <p><del>S/. @item.Precio</del><em class="item_price">$70.00</em></p>
                        <a href="#" data-text="Add To Cart" class="my-cart-b item_add">Add To Cart</a>
                    </div>
                </div>
            </div>
}


            <div class="clearfix"></div>
        </div>
    </div>
</div>